%div{'class' => 'pageHeading'}
  %h1= t('app_title')
  %p= t('app_description')
  - flash.each do |key, value|
    = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?
  %nav
    - if user_signed_in?
      = "#{current_user.id} |"
      = link_to t('profile'), edit_user_registration_path
      = '|'
      = link_to t('logout'), destroy_user_session_path, method: 'delete'
    -else
      = link_to t('login'), new_user_session_path
      = '|'
      = link_to t('sign_up'), new_user_registration_path
  %div{'class' => 'navigationBar'}
    %div{'class' => 'navigationBarElement', 'id' => 'nav1'}
    %div{'class' => 'navigationBarElement', 'id' => 'nav2'}
    %div{'class' => 'navigationBarElement', 'id' => 'nav3'}
