= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :profile
    = f.text_field :profile
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :post_text
    = f.text_area :post_text
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
