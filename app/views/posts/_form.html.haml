%div.container
  %div.row
    = form_for post do |f|
      - if post.errors.any?
        #error_explanation
          %h2= "#{pluralize(post.errors.count, "error")} prohibited this post from being saved:"
          %ul
            - @post.errors.full_messages.each do |message|
              %li= message
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.text_area :post_text, class: "textarea"
      .actions
        = f.submit 'Create post'
